{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "lib": [
            "DOM",
            "ES2022"
        ],
        "paths": {
            "@client/*": ["./foundry/client/*"],
            "@common/*": ["./foundry/common/*"]
        },
        "allowJs": true,
        "moduleResolution": "Node"
    },
    "exclude": [
        "node_modules", 
        "**/node_modules/*"
    ],
    "include": [
        "scripts/module.mjs", 
        "system/**/*.mjs", 
        "foundry/client/client.mjs",
        "foundry/client/global.d.mts",
        "types/**/*.d.ts"
    ],
    "typeAcquisition": {
        "include": [
            "jquery"
        ]
    }
}